{
  "name": "@fastybird/web-ui-directives",
  "version": "1.0.0-dev.20",
  "type": "module",
  "description": "FastyBird IoT application UI directives",
  "homepage": "https://www.fastybird.com",
  "bugs": "https://github.com/FastyBird/fastybird#issues",
  "license": "Apache-2.0",
  "author": {
    "name": "FastyBird s.r.o.",
    "email": "code@fastybird.com",
    "url": "https://www.fastybird.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FastyBird/web-ui-library.git"
  },
  "main": "./src/entry.ts",
  "module": "dist/web-ui-directives.es.js",
  "types": "dist/web-ui-directives.d.ts",
  "exports": {
    ".": {
      "import": "./dist/web-ui-directives.es.js",
      "require": "./dist/web-ui-directives.umd.js"
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "build": "yarn clean && vue-tsc --noEmit --composite false && vite build",
    "build:dev": "vue-tsc --noEmit --composite false && vite build --watch --mode development",
    "build:only": "yarn clean && vite build",
    "types": "vue-tsc --noEmit --composite false",
    "lint:js": "eslint src",
    "lint:js:fix": "eslint src --fix",
    "pretty": "yarn pretty:write && yarn pretty:check",
    "pretty:check": "prettier src --check",
    "pretty:write": "prettier src --write"
  },
  "dependencies": {
    "@fastybird/web-ui-constants": "1.0.0-dev.20",
    "@fastybird/web-ui-utils": "1.0.0-dev.20",
    "lodash": "^4.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.1",
    "@nabla/vite-plugin-eslint": "^2.0",
    "@types/lodash": "^4.17",
    "@types/node": "^20.12",
    "@typescript-eslint/eslint-plugin": "^7.8",
    "@typescript-eslint/parser": "^7.8",
    "@vitejs/plugin-vue": "^5.0",
    "@vue/eslint-config-prettier": "^9.0",
    "@vue/eslint-config-typescript": "^13.0",
    "eslint": "^9.1",
    "eslint-config-prettier": "^9.1",
    "eslint-plugin-prettier": "^5.1",
    "eslint-plugin-vue": "^9.25",
    "prettier": "^3.2",
    "rimraf": "^5.0",
    "typescript": "^5.4",
    "typescript-eslint": "^7.8",
    "vite": "^5.2",
    "vite-plugin-dts": "^3.9",
    "vue": "^3.4",
    "vue-loader": "^17.4",
    "vue-tsc": "^2.0"
  },
  "peerDependencies": {
    "vue": "^3.4"
  },
  "engines": {
    "node": ">=20"
  }
}
