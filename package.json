{
  "name": "@fastybird/web-ui-theme",
  "version": "0.5.0",
  "description": "FastyBird basic theme & Vue components for web apps",
  "keywords": [
    "fastybird",
    "fb",
    "ui",
    "components",
    "vue"
  ],
  "homepage": "https://www.fastybird.com",
  "bugs": "https://github.com/FastyBird/web-ui-theme/issues",
  "license": "Apache-2.0",
  "author": {
    "name": "FastyBird s.r.o.",
    "email": "info@fastybird.com",
    "url": "https://www.fastybird.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FastyBird/web-ui-theme.git"
  },
  "main": "dist/web-ui-theme.umd.js",
  "module": "dist/web-ui-theme.es.js",
  "types": "web-ui-theme.d.ts",
  "exports": {
    ".": {
      "import": "./dist/web-ui-theme.es.js",
      "require": "./dist/web-ui-theme.umd.js"
    }
  },
  "files": [
    "dist/*",
    "src/components/**/*.scss",
    "src/assets/*",
    "web-ui-theme.d.ts"
  ],
  "scripts": {
    "build": "tsc --noEmit --skipLibCheck && vite build",
    "lint:js": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/",
    "lint:js:fix": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/ --fix",
    "lint:ts": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "format": "prettier . --write",
    "storybook:serve": "start-storybook -p 6006",
    "storybook:build": "build-storybook -s ./src/static",
    "storybook:deploy": "storybook-to-ghpages"
  },
  "dependencies": {
    "@vueuse/core": "^7.6",
    "body-scroll-lock": "^4.0.0-beta.0",
    "lodash.get": "^4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.9",
    "@babel/plugin-proposal-class-properties": "^7.10",
    "@babel/preset-env": "^7.9",
    "@babel/preset-typescript": "^7.9",
    "@commitlint/cli": "^15.0",
    "@commitlint/config-conventional": "^15.0",
    "@fortawesome/fontawesome-svg-core": "^1.3",
    "@fortawesome/free-solid-svg-icons": "^6.0",
    "@fortawesome/vue-fontawesome": "^3.0.0-5",
    "@storybook/addon-actions": "^6.3",
    "@storybook/addon-controls": "^6.4",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.3",
    "@storybook/addon-knobs": "^6.3",
    "@storybook/addon-links": "^6.3",
    "@storybook/addon-viewport": "^6.4.19",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/vue3": "^6.4",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/lodash": "^4.14",
    "@types/lodash.get": "^4.4",
    "@types/node": "16.10",
    "@typescript-eslint/eslint-plugin": "^4.18",
    "@typescript-eslint/parser": "^4.18",
    "@vitejs/plugin-vue": "1.7",
    "@vue/babel-preset-app": "^4.5",
    "@vue/cli-plugin-babel": "~4.5",
    "@vue/cli-plugin-eslint": "~4.5",
    "@vue/cli-plugin-pwa": "~4.5",
    "@vue/cli-plugin-router": "~4.5",
    "@vue/cli-plugin-typescript": "~4.5",
    "@vue/cli-plugin-vuex": "~4.5",
    "@vue/cli-service": "~4.5",
    "@vue/compiler-sfc": "^3.0",
    "@vue/eslint-config-airbnb": "^5.0",
    "@vue/eslint-config-typescript": "^7.0",
    "@zerollup/ts-transform-paths": "^1.7",
    "babel-loader": "^8.2",
    "cross-env": "^7.0",
    "eslint": "^7.27",
    "eslint-config-airbnb-base": "^14.2",
    "eslint-config-prettier": "^8.3",
    "eslint-plugin-import": "^2.20",
    "eslint-plugin-prettier": "^3.4",
    "eslint-plugin-vue": "^7.0",
    "husky": "^7.0",
    "null-loader": "^4.0",
    "postcss": "^8.3",
    "prettier": "^2.5",
    "sass": "^1.26",
    "sass-loader": "^8.0",
    "stylelint": "^14.1",
    "stylelint-config-prettier": "^9.0",
    "stylelint-config-standard": "^24.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^3.19",
    "tslib": "^2.3",
    "typescript": "4.4",
    "typescript-transform-paths": "^3.3.1",
    "vite": "^2.6",
    "vite-plugin-dts": "^0.9",
    "vue": "^3.2",
    "vue-loader": "^16.5",
    "vue-tsc": "0.1",
    "vue-typescript-import-dts": "^4.0"
  }
}
