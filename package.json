{
  "name": "@fastybird/web-ui-library",
  "version": "1.0.0-dev.20",
  "type": "module",
  "description": "FastyBird IoT application theme & Vue components",
  "keywords": [
    "fastybird",
    "fb",
    "ui",
    "components",
    "vue"
  ],
  "homepage": "https://www.fastybird.com",
  "bugs": "https://github.com/FastyBird/fastybird/issues",
  "license": "Apache-2.0",
  "author": {
    "name": "FastyBird s.r.o.",
    "email": "code@fastybird.com",
    "url": "https://www.fastybird.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FastyBird/web-ui-library.git"
  },
  "main": "dist/web-ui-library.umd.js",
  "module": "dist/web-ui-library.es.js",
  "types": "dist/web-ui-library.d.ts",
  "exports": {
    ".": {
      "import": "./dist/web-ui-library.es.js",
      "require": "./dist/web-ui-library.umd.js"
    }
  },
  "files": [
    "dist/*",
    "src/components/**/*.scss",
    "src/assets/*"
  ],
  "scripts": {
    "serve": "vite preview",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "build": "yarn clean && vite build",
    "build:only": "yarn clean && vite build",
    "lint:js": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src",
    "lint:js:fix": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src --fix",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "pretty": "yarn pretty:write && yarn pretty:check",
    "pretty:check": "prettier src .storybook --check",
    "pretty:write": "prettier src .storybook --write",
    "storybook:serve": "start-storybook -p 6006",
    "storybook:build": "build-storybook -s src/static",
    "storybook:deploy": "storybook-to-ghpages"
  },
  "dependencies": {
    "@vueuse/core": "^10.9",
    "body-scroll-lock": "^4.0.0-beta.0",
    "lodash.get": "^4.4",
    "lodash.isempty": "^4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23",
    "@babel/plugin-proposal-class-properties": "^7.18",
    "@babel/preset-env": "^7.23",
    "@babel/preset-typescript": "^7.23",
    "@commitlint/cli": "^19.0",
    "@commitlint/config-conventional": "^19.0",
    "@fortawesome/fontawesome-common-types": "^6.5",
    "@fortawesome/fontawesome-svg-core": "^6.5",
    "@fortawesome/free-solid-svg-icons": "^6.5",
    "@fortawesome/vue-fontawesome": "^3.0",
    "@nabla/vite-plugin-eslint": "^2.0",
    "@storybook/addon-a11y": "^7.6",
    "@storybook/addon-actions": "^7.6",
    "@storybook/addon-essentials": "^7.6",
    "@storybook/addon-links": "^7.6",
    "@storybook/builder-vite": "^7.6",
    "@storybook/vue3": "^7.6",
    "@types/body-scroll-lock": "^3.1",
    "@types/lodash.get": "^4.4",
    "@types/lodash.isempty": "^4.4",
    "@types/node": "^20.11",
    "@typescript-eslint/eslint-plugin": "^7.1",
    "@typescript-eslint/parser": "^7.1",
    "@vitejs/plugin-vue": "^5.0",
    "@vue/eslint-config-prettier": "^9.0",
    "@vue/eslint-config-typescript": "^12.0",
    "babel-loader": "^9.1",
    "eslint": "^8.57",
    "eslint-config-prettier": "^9.1",
    "eslint-plugin-markdown": "^3.0",
    "eslint-plugin-prettier": "^5.1",
    "eslint-plugin-storybook": "^0.8",
    "eslint-plugin-vue": "^9.22",
    "gh-pages": "^6.1",
    "postcss": "^8.4",
    "postcss-scss": "^4.0",
    "prettier": "^3.2",
    "rimraf": "^5.0",
    "rollup-plugin-delete": "^2.0",
    "sass": "^1.71",
    "sass-loader": "^14.1",
    "stylelint": "^16.2",
    "stylelint-config-prettier": "^9.0",
    "stylelint-config-recommended-vue": "^1.5",
    "stylelint-config-standard": "^36.0",
    "stylelint-config-standard-scss": "^13.0",
    "stylelint-order": "^6.0",
    "stylelint-prettier": "^5.0",
    "typescript": "^5.3",
    "vite": "^5.1",
    "vite-plugin-dts": "^3.7",
    "vite-svg-loader": "^5.1",
    "vue": "^3.4",
    "vue-loader": "^17.4",
    "vue-tsc": "^1.8"
  },
  "engines": {
    "node": ">=20"
  }
}
